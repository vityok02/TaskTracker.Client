<div class="ant-form ant-form-vertical">
    <div class="ant-form-item">
        <label class="ant-form-item-label"><span>Project Name</span></label>
        <div class="form-control">@Project.Name</div>
    </div>

    <div class="ant-form-item">
        <label class="ant-form-item-label"><span>Description</span></label>
        <TextArea Class="form-control"
                  ReadOnly
                  Value=@Project.Description
                  Rows=3
                  Style="white-space: pre-wrap;" />
    </div>

    <div class="d-flex flex-row gap-2">
        <div class="ant-form-item flex-fill">
            <label class="ant-form-item-label"><span>Start date</span></label>
            <div class="form-control">
                @Project.StartDate?.ToString("yyyy-MM-dd")
            </div>
        </div>

        <div class="ant-form-item flex-fill">
            <label class="ant-form-item-label"><span>End date</span></label>
            <div class="form-control">
                @Project.EndDate?.ToString("yyyy-MM-dd")
            </div>
        </div>
    </div>
</div>
