@page "/projects"
@using Domain.Dtos
@rendermode InteractiveServer

<PageTitle>Projects</PageTitle>

<Title Level="3">Projects</Title>

<Button Type=@ButtonType.Primary
        OnClick=@(() => _visible = true)>
    Create new
</Button>

<CreateProject Visible=@_visible
               OnProjectCreated=@LoadDataAsync />

<Divider />

<Table TItem="ProjectDto"
       DataSource="Projects"
       HidePagination>

    <Column @bind-Field=@context.Name Title="Name" />

    <Column @bind-Field=@context.CreatedBy Title="Created by" />

    <Column @bind-Field=@context.CreatedAt Title="Created at">
        <Template>
            @context.CreatedAt.ToShortDateString()
        </Template>
    </Column>

</Table>

@code {
    bool _visible = false;
}