@page "/projects/{projectId:guid}/lobby"

<PageTitle>Lobby</PageTitle>

<div class="max-w-4xl mx-auto p-4 space-y-6">
    <div class="bg-white shadow-xl rounded-2xl p-6 space-y-4">
        <h2 class="text-xl font-semibold flex items-center gap-2">
            <i class="fas fa-cog text-gray-600"></i> Settings
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <Cameras CameraChanged=@OnCameraChanged />
            <Microphones MicrophoneChanged=@OnMicrophoneChanged />
        </div>
    </div>

    <div class="bg-white shadow-xl rounded-2xl overflow-hidden">
        <div class="aspect-video">
            <div id="camera" class="w-full h-full bg-black"></div>
        </div>
    </div>

    <div class="flex justify-end">
        <Button @onclick="@(async () => await TryJoinRoom(ProjectId.ToString()))">
            Join
        </Button>
    </div>
</div>
