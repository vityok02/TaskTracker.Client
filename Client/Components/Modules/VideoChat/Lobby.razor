@page "/projects/{projectId:guid}/lobby"

<PageTitle>Lobby</PageTitle>

<div class="max-w-4xl mx-auto p-4 space-y-6">
    <div class="bg-white shadow-xl rounded-2xl p-6 space-y-4">
        <h2 class="text-xl font-semibold flex items-center gap-2">
            <i class="fas fa-cog text-gray-600"></i> Settings
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <CameraSelector />
            <MicrophoneSelector />
        </div>
    </div>

    <div class="embed-responsive embed-responsive-16by9 mx-auto" style="max-width: 500px;">
        <div id="camera" class="embed-responsive-item"></div>
    </div>

    <div class="flex justify-end">
        <Button @onclick=@JoinRoom>
            Join
        </Button>
    </div>
</div>
