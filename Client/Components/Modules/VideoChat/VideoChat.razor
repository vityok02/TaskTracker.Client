@page "/projects/{projectId:guid}/videochat"

<PageTitle>Videochat</PageTitle>

<HeadContent>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/4.5.0/darkly/bootstrap.min.css" />
</HeadContent>

@layout VideoChatLayout

<div class="container h-100 pt-5 d-flex flex-column">
    <div class="row flex-grow-1">
        <div class="col">
            <div id="participants" class="participants-grid">
                <div class="embed-responsive embed-responsive-16by9">
                    <div id="camera" class="embed-responsive-item"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col d-flex justify-content-center">
            <div class="jumbotron p-4 d-flex flex-row">
                <CameraSelector />
                <MicrophoneSelector />
            </div>
        </div>
    </div>
</div>
