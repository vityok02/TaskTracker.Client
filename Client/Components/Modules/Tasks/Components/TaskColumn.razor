<div class="col-12 col-md-6 col-lg-4"
     style="max-width: 400px">
    <div class="card shadow-sm h-100 d-flex flex-column">
        <div class="card-body d-flex flex-column">
            <div class="d-flex align-items-center justify-content-between">
                <h5 class="card-title mt-1 ms-2">
                    @State.Name
                </h5>
                <Dropdown Trigger="@(new Trigger[] { Trigger.Click })">
                    <Overlay>
                        <Menu>
                            <Menu>
                                <MenuItem>
                                    <Button Type=@ButtonType.Text
                                            OnClick=@OpenUpdateStateForm>
                                        Edit
                                    </Button>
                                </MenuItem>
                            </Menu>

                            <MenuItem>
                                <Button Type="@ButtonType.Text"
                                        OnClick="@(() => ShowStateDeleteConfirm(State.Id))">
                                    Delete
                                </Button>
                            </MenuItem>
                        </Menu>
                    </Overlay>

                    <ChildContent>
                        <a @onclick:preventDefault>
                            <i class="bi bi-three-dots" />
                        </a>
                    </ChildContent>
                </Dropdown>
            </div>

            <div class="task-card">
                <ul class="list-group list-group-flush flex-grow-1">
                    @foreach (var item in Tasks.Where(t => t.StateId == State.Id))
                    {
                        <li class="list-group-item p-0">
                            <div class="card shadow-sm mb-2">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <a @onclick="@(() => OpenDetials(item.Id))"
                                       class="text-decoration-none text-dark">
                                        @item.Name
                                    </a>

                                    <Dropdown Trigger="@(new Trigger[] { Trigger.Click })">
                                        <Overlay>
                                            <Menu>
                                                <MenuItem>
                                                    <Button Type="@ButtonType.Text"
                                                            OnClick="@(() => OpenDetials(item.Id))">
                                                        Details
                                                    </Button>
                                                </MenuItem>

                                                <MenuItem>
                                                    <Button Type="@ButtonType.Text"
                                                            OnClick=@(() => ShowTaskDeleteConfirm(item.Id))>
                                                        Delete
                                                    </Button>
                                                </MenuItem>
                                            </Menu>
                                        </Overlay>

                                        <ChildContent>
                                            <a @onclick:preventDefault>
                                                <i class="bi bi-three-dots" />
                                            </a>
                                        </ChildContent>
                                    </Dropdown>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>

            <Button OnClick="@(() => ShowInput(State.Id))"
                    Class="btn bg-transparent border-0 mt-auto w-100">
                Add item
            </Button>
        </div>
    </div>
</div>