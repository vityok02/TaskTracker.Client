<div class="col-12 col-md-6 col-lg-4" style="max-width: 400px">
    <div class="card shadow-sm h-100 d-flex flex-column">
        <div class="card-body d-flex flex-column flex-grow-1">
            <div class="d-flex align-items-center justify-content-between">
                <h5 class="card-title mt-1 ms-2">
                    @State.Name
                </h5>
                <Dropdown Trigger="@(new Trigger[] { Trigger.Click })">
                    <Overlay>
                        <Menu>
                            <Menu>
                                <MenuItem>
                                    <Button Type=@ButtonType.Text
                                    OnClick=@OpenUpdateStateForm>
                                        Edit
                                    </Button>
                                </MenuItem>
                            </Menu>

                            <MenuItem>
                                <Button Type="@ButtonType.Text"
                                OnClick="@(() => ShowStateDeleteConfirm(State.Id))">
                                    Delete
                                </Button>
                            </MenuItem>
                        </Menu>
                    </Overlay>

                    <ChildContent>
                        <a @onclick:preventDefault>
                            <i class="bi bi-three-dots" />
                        </a>
                    </ChildContent>
                </Dropdown>
            </div>

            <div class="task-card col flex-grow-1 overflow-auto" style="max-height: 350px;">
                <Dropzone Items="StateTasks"
                TItem="TaskDto"
                OnItemDrop=@((task) => OnDrop(task, StateTasks))
                Class="h-100">
                    <ChildContent>
                        <div class="card shadow-sm">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <a @onclick="@(() => OpenDetials(context.Id))"
                                class="text-decoration-none text-dark">
                                    @context.Name
                                    @context.Order
                                </a>

                                <Dropdown Trigger="@(new Trigger[] { Trigger.Click })">
                                    <Overlay>
                                        <Menu>
                                            <MenuItem>
                                                <Button Type="@ButtonType.Text"
                                                OnClick="@(() => OpenDetials(context.Id))">
                                                    Details
                                                </Button>
                                            </MenuItem>

                                            <MenuItem>
                                                <Button Type="@ButtonType.Text"
                                                OnClick=@(() => ShowTaskDeleteConfirm(context.Id))>
                                                    Delete
                                                </Button>
                                            </MenuItem>
                                        </Menu>
                                    </Overlay>

                                    <ChildContent>
                                        <a @onclick:preventDefault>
                                            <i class="bi bi-three-dots" />
                                        </a>
                                    </ChildContent>
                                </Dropdown>
                            </div>
                        </div>
                    </ChildContent>
                </Dropzone>
            </div>

            <Button OnClick="@(() => ShowInput(State.Id))"
            Class="btn bg-transparent border-0 w-100 mt-auto">
                Add item
            </Button>
        </div>
    </div>
</div>
